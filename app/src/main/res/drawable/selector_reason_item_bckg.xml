<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="@color/pressed_item_color" />
        </shape>

    </item>
    <item android:state_checked="true">

        <shape>
            <solid android:color="@color/checked_item_color" />
        </shape>

    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#00d7d7d7" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="#00ffffff" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>