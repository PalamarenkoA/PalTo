<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.geekhub.palto.viewmodel.FirstSettingsViewModel" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activity.FirstSettingsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hello_tv"
                    android:text="Привет, Иван Иваныч!"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/small_avatar_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Для того, чтобы начать использовать приложение, Вам следует заполнить небольшую анкету"/>
            <TextView
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Личная информация"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.geekhub.palto.customviews.MaterialEditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:label="Отображаемое имя"
                    app:validationType="person"
                    app:bindingWithOnFocusValidation="@{model.nickName}"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Аватар"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                //TODO: Custom view
                <com.geekhub.palto.customviews.PolToCheckBoxList
                    android:id="@+id/interests_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </ScrollView>


        </LinearLayout>
    </RelativeLayout>
</layout>