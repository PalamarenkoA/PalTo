<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MaterialEditText">
        <attr name="android:hint"/>
        <attr name="android:background"/>
        <attr name="android:inputType"/>

        <attr name="android:minLines"/>
        <attr name="android:lines"/>
        <attr name="android:imeOptions"/>
        <attr name="android:textColor"/>

        <attr name="maxLength"
            format="integer"/>

        <attr name="inputLayoutBackground" format="integer"/>
        <attr name="textFieldBackground" format="integer"/>
        <attr name="inputLayoutErrorBackground" format="integer"/>
        <attr name="editTextErrorBackground" format="integer"/>

        <attr name="validationType" format="enum">
            <enum name="none" value="0"/>
            <enum name="email" value="1"/>
            <enum name="person" value="2"/>
            <enum name="password" value="3"/>
            <enum name="confirm" value="4"/>
            <enum name="subdomain" value="5"/>
        </attr>

        <attr name="collapsedTextColor" format="color"/>
        <attr name="errorTextColor" format="color"/>
        <attr name="hintColor" format="color"/>
        <attr name="label" format="string"/>

        <attr name="errorTextGravity" format="integer"/>
        <attr name="floatingLabelGravity" format="integer"/>

        <attr name="textPadding" format="dimension"/>
        <attr name="textPaddingLeft" format="dimension"/>
        <attr name="textPaddingRight" format="dimension"/>
        <attr name="textPaddingTop" format="dimension"/>
        <attr name="textPaddingBottom" format="dimension"/>

        <attr name="confirmToField" format="integer"/>
        <attr name="needValidation" format="boolean"/>
        <attr name="labelVisible" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="PolToMultipleChoicePicker">
        <attr name="pickerLabel" format="string"/>
        <attr name="buttonTitle" format="string"/>
    </declare-styleable>

</resources>