<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NeruButton">
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="NeruFiltersPicker">
        <attr name="labelText" format="string" />
        <attr name="labelVisibility" format="boolean" />
        <attr name="defaultText" format="string" />
        <attr name="hint" format="string" />
        <attr name="parameterName" format="string" />
        <attr name="canBeAny" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AdditionalOpenerButton">
        <attr name="android:text" />
        <attr name="op_flag" format="integer" />
    </declare-styleable>

    <declare-styleable name="CriteriaCheckboxesLayout">
        <attr name="flag" format="integer" />

    </declare-styleable>

    <declare-styleable name="SpecificationsItemLayout">

        <attr name="textTitle" format="string" />
        <attr name="textValue" format="string" />
        <attr name="bg_num" format="integer" />

    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="MaterialEditText">
        <attr name="android:hint"/>
        <attr name="android:background"/>
        <attr name="android:inputType"/>

        <attr name="android:minLines"/>
        <attr name="android:lines"/>
        <attr name="android:imeOptions"/>
        <attr name="android:textColor"/>

        <attr name="maxLength"
            format="integer"/>

        <attr name="inputLayoutBackground" format="integer"/>
        <attr name="textFieldBackground" format="integer"/>
        <attr name="inputLayoutErrorBackground" format="integer"/>
        <attr name="editTextErrorBackground" format="integer"/>

        <attr name="validationType" format="enum">
            <enum name="none" value="0"/>
            <enum name="email" value="1"/>
            <enum name="person" value="2"/>
            <enum name="password" value="3"/>
            <enum name="confirm" value="4"/>
            <enum name="subdomain" value="5"/>
        </attr>

        <attr name="collapsedTextColor" format="color"/>
        <attr name="errorTextColor" format="color"/>
        <attr name="hintColor" format="color"/>
        <attr name="label" format="string"/>

        <attr name="errorTextGravity" format="integer"/>
        <attr name="floatingLabelGravity" format="integer"/>

        <attr name="textPadding" format="dimension"/>
        <attr name="textPaddingLeft" format="dimension"/>
        <attr name="textPaddingRight" format="dimension"/>
        <attr name="textPaddingTop" format="dimension"/>
        <attr name="textPaddingBottom" format="dimension"/>

        <attr name="confirmToField" format="integer"/>
        <attr name="needValidation" format="boolean"/>
        <attr name="labelVisible" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="InterestingButton">
        <attr name="android:text" />
        <attr name="position" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

</resources>